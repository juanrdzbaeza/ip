package org.ip.ejerciciosResueltos01_13;

public class Ejercicio09V1 {
	
	/**
	* Calcula el factorial de un entero positivo
	* n! = n.(n-1).(n-2)...1
	* @param args
	*/

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int dato = 9;
		/* la variable resultado podemos hacerla long, variable de 64 bits para no tener resultados
		 * fantasmas debido a numeros demasiado grandes
		 */
		
		long fact = 1;
		int i = 1;
		while (i <= dato){
			fact = fact * i;
			i++;
		}
		System. out.println("El factorial de "+dato +" es "+fact);
	}
}
